<UserControl x:Class="View.Views.Patient.PatientCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Views.Patient"
             mc:Ignorable="d" 
             d:DesignHeight="364.748" d:DesignWidth="465.108">
    
    <DockPanel LastChildFill="False">
        <Button
            DockPanel.Dock="Top"
            x:Name="Back"
            Click="Back_Click"
            Content="Back"
            Background="Transparent"
            Foreground="Blue"
            BorderBrush="Transparent"
            Padding="20,10,20,10"
            HorizontalAlignment="Left"
            />


        <StackPanel FlowDirection="RightToLeft" DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button 
                x:Name="Save"
                Click="Save_Click"
                Margin="10"
                Padding="20,10,20,10"
                HorizontalAlignment="Left"
                Content="Save"
                />

        </StackPanel>
        
        <local:IdentityControl x:Name="identity" DockPanel.Dock="Top" Margin="50,0,0,0"/>

    </DockPanel>
</UserControl>
